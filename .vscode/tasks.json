    },
    {
      "label": "git merge master",
      "type": "shell",
      "command": "git merge master"
    },
    {
      "label": "git stash pop",
      "type": "shell",
      "command": "git stash pop"
    },
    {
      "label": "git init",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn":[
        "git stash",
        "git checkout master",
        "git pull",
        "git checkout previous branch",
        "git merge master",
        "git stash pop"
      ],
    }
  ]
